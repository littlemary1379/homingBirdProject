<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="70dp">

    <ImageView
        android:id="@+id/imageViewPostBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/mailbox"
        android:translationZ="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="@id/imageViewPostBox"
        app:layout_constraintTop_toTopOf="@id/imageViewPostBox">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/imageViewHighLight1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/highlight1"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/imageViewHighLight2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/highlight2"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/imageViewHighLight3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/highlight3"
                android:visibility="invisible"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mail"
            android:visibility="invisible"
            android:layout_gravity="center"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>